<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetallesActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp"
        android:text="Title"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:fontFamily="@font/raleway_semibold" />

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="360dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/uploada" />

    <TextView
        android:id="@+id/textView601"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Tipo de propiedad:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_house_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="Tipo de propiedad"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView602"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Dirección:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_markunread_mailbox_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailDirec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="Direccion"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView605"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Tamaño (m²):"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_add_location_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailTam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="120"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView604"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Habitaciones:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_bedroom_child_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailHabi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="4"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView603"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Baños:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_bathroom_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailBanos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="2"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView606"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Estacionamiento:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_directions_car_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailEs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Precio:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailLang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="Precio"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:text="Descripción:"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_border_color_24"
        app:fontFamily="@font/raleway_semibold" />

    <TextView
        android:id="@+id/detailDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:text="Description"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:fontFamily="@font/raleway" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:menu_colorNormal="@color/colorPrimaryDark"
            app:menu_colorPressed="@color/colorPrimary"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/ic_baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                app:fab_colorNormal="@color/green"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</LinearLayout>
</ScrollView>